# History control
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=32768
HISTFILESIZE="${HISTSIZE}"

# Autocompletion
source /usr/share/bash-completion/bash_completion

# Set complete path
export PATH="./bin:$HOME/.local/bin:$HOME/.local/share/ubuntu-fresh-install/bin:$PATH"
set +h

export UBUNTU_FRESH_INSTALL_PATH="/home/$USER/.local/share/ubuntu-fresh-install"